<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.dscmicrofinance">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".authentication.SignInActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".authentication.SignUpActivity"
            android:parentActivityName=".authentication.SignInActivity" />
        <activity android:name=".main.MainActivity" />
        <activity
            android:name=".main.menu.AboutActivity"
            android:label="About"
            android:parentActivityName=".main.MainActivity" />
        <activity
            android:name=".main.menu.OurServicesActivity"
            android:label="Our Services"
            android:parentActivityName=".main.MainActivity" />

        <activity
            android:name=".main.menu.ContactActivity"
            android:label="Contact"
            android:parentActivityName=".main.MainActivity" />
    </application>

</manifest>